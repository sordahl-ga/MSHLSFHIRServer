            "type": "String"
        },
        "storageAccounts_fhirstorage_name": {
            "defaultValue": "myfhirstorage",
            "type": "String"
        },
        "serverfarms_ServicePlan_name": {
            "defaultValue": "MyFhirServicePlan",
            "type": "String"
        },
        "hostNameBindings_fhirserver.azurewebsites.net_name": {
            "defaultValue": "myfhirserver.azurewebsites.net",
            "type": "String"
