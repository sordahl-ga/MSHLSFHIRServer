              "defaultValue": "East US 2",
             "type":"String"
        },
        "fhirweblocation": {
              "defaultValue": "Central US",
              "type":"String"
        },
		"repoURL": {
				"type": "string",
				"defaultValue": "https://github.com/sordahl-ga/MSHLSFHIRServer",
				"metadata": {
					"description": "The URL for the GitHub repository that contains the project to deploy."
				}
		},
		"branch": {
				"type": "string",
				"defaultValue": "master",
				"metadata": {
					"description": "The branch of the GitHub repository to use."
				}
		},
		"enableauth": {
				"type": "string",
				"defaultValue": "false",
				"metadata": {
					"description": "Enable OAUTH authentication"
				}
		},
		"tenent": {
				"type": "string",
				"defaultValue": "microsoft.onmicrosoft.com",
				"metadata": {
					"description": "AD Tenent Name (FQDN)"
				}
		},
		"audience": {
				"type": "string",
				"defaultValue": "myfhirserver.azurewebsites.net",
				"metadata": {
					"description": "OAUTH Audience (Service Principal)"
				}
		},
		"fhirdbname": {
				"type": "string",
				"defaultValue": "FHIR3",
				"metadata": {
					"description": "Name of the FHIR DB in CosmosDB"
				}
		}
